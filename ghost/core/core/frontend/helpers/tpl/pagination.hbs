<nav class="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> Publicaciones más nuevas</a>
    {{/if}}
    <span class="page-number">Página {{page}} de {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Publicaciones más antiguas <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>
