{{#if @image}}
    <div class="gh-image-uploader -with-image">
        <div><img src={{@image}}></div>
        <a class="image-delete" title="Borrar" {{on "click" (fn @remove "")}}>
            {{svg-jar "trash"}}
            <span class="hidden">Borrar</span>
        </a>
    </div>
{{else}}
    <GhImageUploader
        @text={{@text}}
        @altText={{@altText}}
        @allowUnsplash={{@allowUnsplash}}
        @update={{@update}}
        @uploadStarted={{optional @uploadStarted}}
        @uploadFinished={{optional @uploadFinished}}
    />
{{/if}}